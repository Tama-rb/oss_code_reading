<p id="notice"><%= notice %></p>

<h1>News Papers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_papers.each do |news_paper| %>
      <tr>
        <td><%= news_paper.title %></td>
        <td><%= news_paper.status %></td>
        <td><%= link_to 'Show', news_paper %></td>
        <td><%= link_to 'Edit', edit_news_paper_path(news_paper) %></td>
        <td><%= link_to 'Destroy', news_paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Paper', new_news_paper_path %>
